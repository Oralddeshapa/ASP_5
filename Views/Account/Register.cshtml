@model TeaChair.ViewModels.RegisterViewModel
<h2>Form for registration</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Points"></label><br />
        <input asp-for="Points" />
        <span asp-validation-for="Points"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <label asp-for="Timezone"></label><br />
        <input asp-for="Timezone" />
        <span asp-validation-for="Timezone"></span>
    </div>
    <div>
        <input type="submit" value="Register" />
    </div>
</form>
